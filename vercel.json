{
  "version": 2,
  "buildCommand": "CI=false yarn build",
  "installCommand": "yarn install",
  "functions": {
    "api/server.js": {
      "maxDuration": 30,
      "includeFiles": "server/**,build/**"
    }
  },
  "rewrites": [
    { "source": "/static/(.*)", "destination": "/build/static/$1" },
    { "source": "/(.*)", "destination": "/api/server" }
  ]
}
