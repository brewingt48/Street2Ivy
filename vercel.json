{
  "version": 2,
  "buildCommand": "CI=false yarn build && node scripts/generate-static-index.js",
  "installCommand": "yarn install",
  "outputDirectory": ".",
  "functions": {
    "api/server.js": {
      "maxDuration": 30,
      "includeFiles": "server/**,build/**,server/data/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server" },
    { "source": "/static/(.*)", "destination": "/build/static/$1" },
    { "source": "/(.*)", "destination": "/build/index.html" }
  ],
  "headers": [
    {
      "source": "/build/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
